#include <iostream>
using namespace std;

struct Pessoa {
    string nome;
    int idade;
    double altura;
};

int main() {
    int N;
    cin >> N;

    Pessoa p[100];

    double somaAlturas = 0;
    int menores16 = 0;

    for (int i = 0; i < N; i++) {
        cin >> p[i].nome >> p[i].idade >> p[i].altura;
        somaAlturas += p[i].altura;
        if (p[i].idade < 16) menores16++;
    }

    double mediaAltura = somaAlturas / N;
    double percentual = (menores16 * 100.0) / N;

    cout << "Altura media = " << mediaAltura << endl;
    cout << "Pessoas com menos de 16 anos: " << percentual << " %" << endl;

    for (int i = 0; i < N; i++) {
        if (p[i].idade < 16) {
            cout << p[i].nome << endl;
        }
    }
}
