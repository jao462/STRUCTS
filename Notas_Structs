#include <iostream>
using namespace std;

struct Aluno {
    string nome;
    double n1, n2;
};

int main() {
    int N;
    cin >> N;

    Aluno a[100];

    for (int i = 0; i < N; i++) {
        cin >> a[i].nome >> a[i].n1 >> a[i].n2;
    }

    cout << "Aprovados:" << endl;

    for (int i = 0; i < N; i++) {
        double media = (a[i].n1 + a[i].n2) / 2.0;

        if (media >= 6.0) {
            cout << a[i].nome << " (" << media << ")" << endl;
        }
    }
}
